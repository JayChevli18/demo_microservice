{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",  // Node.js compatibility with CommonJS modules
    "moduleResolution": "node",  // Resolve modules like Node.js
    "outDir": "./dist",  // Compiled JS files will be placed here
    "esModuleInterop": true,  // Compatibility between ESM and CommonJS
    "skipLibCheck": true,  // Skip checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in file names
    "experimentalDecorators": true,  // Enable decorators if used
    "emitDecoratorMetadata": true  // Emit metadata for decorators
  },
  "include": [
    "src/**/*.ts"  // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules"  // Exclude node_modules to avoid unnecessary processing
  ]
}
